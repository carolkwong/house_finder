<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1 class="my-4">Edit Avatar</h1>

        <%= simple_form_for(@user, url: update_avatar_user_path) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
                <%= f.input :avatar,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "Please upload your profile picture" }%>
                <%= f.input :avatar_cache, as: :hidden %>
            </div>
            <div class="form-actions">
                <%= f.button :submit, 'Save Changes', :class=>"btn btn-primary w-100" %>
            </div>
        <% end %>
    </div>
</div>
