<p id="notice"><%= notice %></p>

<h1>Apartments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Status</th>
      <th>Address</th>
      <th>Price</th>
      <th>Latitude</th>
      <th>Longtitude</th>
      <th>District</th>
      <th>Description</th>
      <th>Size</th>
      <th>Year built</th>
      <th>Bedrooms</th>
      <th>Elevator</th>
      <th>Furnished</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.status %></td>
        <td><%= apartment.address %></td>
        <td><%= apartment.price %></td>
        <td><%= apartment.latitude %></td>
        <td><%= apartment.longtitude %></td>
        <td><%= apartment.district %></td>
        <td><%= apartment.description %></td>
        <td><%= apartment.size %></td>
        <td><%= apartment.year_built %></td>
        <td><%= apartment.bedrooms %></td>
        <td><%= apartment.elevator %></td>
        <td><%= apartment.furnished %></td>
        <td><%= apartment.user.email %></td>
        <td><%= link_to 'Show', apartment %></td>

        <% if policy(apartment).edit? %>
          <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <% end %>

        <% if policy(apartment).destroy? %>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if policy(apartment).create? %>
  <%= link_to 'New Apartment', new_apartment_path %>
<% end %>
