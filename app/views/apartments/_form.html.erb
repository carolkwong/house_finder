
<%= simple_form_for(@apartment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :address %>
    <%= f.input :price %>
    <%= f.input :latitude %>
    <%= f.input :longtitude %>
    <%= f.input :district %>
    <%= f.input :description %>
    <%= f.input :size %>
    <%= f.input :year_built, collection: (1950..Date.today.year) %>
    <%= f.input :bedrooms %>
    <%= f.input :elevator %>
    <%= f.input :furnished %>
    <%= f.input :photo,
                          required: true,
                          multiple: true,
                          autofocus: true,
                          input_html: { autocomplete: "Please upload the apartment pictures" }%>
    <%= f.input :photo_cache, as: :hidden %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary'%>
  </div>
<% end %>
