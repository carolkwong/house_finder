
<%= simple_form_for(@apartment) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :address %>
    <%= f.input :price %>
    <%= f.input :latitude %>
    <%= f.input :longtitude %>
    <%= f.input :district, collection: Apartment::options_for_district %>
    <%= f.input :description %>
    <%= f.input :size %>
    <%= f.input :year_built, collection: (1950..Date.today.year) %>
    <%= f.input :bedrooms %>
    <%= f.input :elevator %>
    <%= f.input :furnished %>

    <%= f.label "Add Photos" %><br>
    <%= f.file_field :img, :multiple => true, name: "photos[img][]" %>
  </div>
  <% @apartment.photos.each do |photo| %>
    <div class="form-inputs my-4">
      <%= cl_image_tag photo.img, :transformation => { :width => 200, :crop => "pad" } %>
      <%= link_to 'Destroy', apartment_photo_path(@apartment, photo), method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2 btn btn-sm btn-danger" %>
    </div>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary my-4'%>
  </div>
<% end %>
